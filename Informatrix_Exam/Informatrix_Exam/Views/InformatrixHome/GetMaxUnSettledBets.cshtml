@model IEnumerable<Informatrix_Exam.Models.UnSettledBets>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UNSETTLED BETS (HIGHEST WIN AMOUNTS)</title>
</head>
<body>
    <h2>UNSETTLED BETS (HIGHEST WIN AMOUNTS)</h2>

    <table border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Win)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Participant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stake)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Win)
                </td>

            </tr>
        }

    </table>
</body>
</html>
